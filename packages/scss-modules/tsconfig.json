    "moduleResolution": "node",
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./dist/*",
    "./node_modules/*"
  ]
